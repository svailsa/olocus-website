#!/bin/sh
# Pre-commit hook for SEO validation
# Ensures all HTML files meet Olocus SEO standards before commit

echo "ğŸ” Running SEO validation checks..."

# Check if Node.js is installed
if ! command -v node &> /dev/null; then
    echo "âš ï¸  Node.js is not installed. Skipping SEO validation."
    exit 0
fi

# Run the SEO validation script
node scripts/validate-seo.js

# Check the exit code
if [ $? -ne 0 ]; then
    echo ""
    echo "âŒ SEO validation failed!"
    echo "ğŸ“š Please fix the issues above before committing."
    echo "ğŸ’¡ See docs/SEO-CHECKLIST.md for detailed requirements."
